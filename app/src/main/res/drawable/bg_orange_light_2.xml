<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange_3" />

            <stroke android:width="2px" android:color="@color/orange_3" />

            <corners android:radius="2dip"></corners>
        </shape>


    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/orange_2" />

            <stroke android:width="2px" android:color="@color/orange_2" />

            <corners android:radius="2dip"></corners>
        </shape>


    </item>

</selector>