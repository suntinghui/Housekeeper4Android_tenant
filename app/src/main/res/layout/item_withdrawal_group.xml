<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f9f9f9"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:orientation="horizontal"
        android:paddingBottom="15dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="15dip" >

        <ImageView
            android:id="@+id/indicatorImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:background="@drawable/withdrawal_indicator_right" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/withdrawalMoneyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="提现 ￥0.00 到银行卡"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/withdrawalTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="2015-01-01 20:20"
                android:textColor="#999999"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/withdrawalStateTextView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="银行处理中"
            android:textColor="@color/orange"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/bottomLineView"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#bbbbbb" />

</LinearLayout>