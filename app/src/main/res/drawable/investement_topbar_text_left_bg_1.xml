<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow_3" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="0dip" android:topLeftRadius="4dp" android:topRightRadius="0dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/yellowme" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="0dip" android:topLeftRadius="4dp" android:topRightRadius="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="0dip" android:topLeftRadius="4dp" android:topRightRadius="0dp" />
        </shape>
    </item>

</selector>