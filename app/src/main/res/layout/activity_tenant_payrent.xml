<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/com.wufriends.housekeeper.tenant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:orientation="vertical">

    <include
        layout="@layout/layout_topbar"
        android:layout_width="fill_parent"
        android:layout_height="50dip" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="10dip"
                android:drawableLeft="@drawable/yellow_line_1"
                android:drawablePadding="8dip"
                android:text="我的房管家" />

            <!-- 我的房管家 -->
            <LinearLayout
                android:id="@+id/keeperLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingTop="10dip">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/headImageView"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:src="@drawable/head_keeper_default"
                    app:border_color="@color/blueme"
                    app:border_width="1dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="#222222"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="房子有事就找房管家，退租，换房，维修"
                        android:textColor="#999999"
                        android:textSize="13sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tenant_img_30" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="10dip"
                android:drawableLeft="@drawable/yellow_line_1"
                android:drawablePadding="8dip"
                android:text="交租信息" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="15dip">

                    <!-- 房屋租期 -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="房屋租期"
                            android:textColor="#999999"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/dateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015-01-01 至 2015-12-31"
                            android:textColor="#666666"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <!-- 房屋押金 -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="房屋押金"
                            android:textColor="#999999"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/mortgageMoneyTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 元"
                            android:textColor="@color/blueme"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <!-- 首付租金 -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="80dip"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="首付租金"
                            android:textColor="#999999"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/firstMonthMoneyTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 元"
                            android:textColor="@color/blueme"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="160dip"
                    android:layout_height="160dip"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dip"
                    android:layout_marginTop="80dip"
                    android:layout_weight="1">

                    <com.housekeeper.activity.view.CircleProgress
                        android:id="@+id/circleProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <com.gelitenight.waveview.library.WaveView
                        android:id="@+id/waveView"
                        android:layout_width="130dip"
                        android:layout_height="130dip"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:text="交租时间"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/monthStatusTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9月9日"
                                android:textColor="@color/redme"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/prePayTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="前付"
                                android:textColor="@color/redme"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:text="______________"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/monthTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:text="01/12"
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>

                </FrameLayout>

            </FrameLayout>

            <!-- 按月交租 -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="按月交租 "
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/moneyMonthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/orange"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 元"
                    android:textColor="@color/orange"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="20dip"
                android:orientation="vertical"
                android:paddingLeft="30dip"
                android:paddingRight="30dip">

                <TextView
                    android:id="@+id/surplusDayTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="剩余0天"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="5dip"
                    android:layout_alignBottom="@id/applyBtn"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dip"
                    android:layout_marginTop="10dip"
                    android:progressDrawable="@drawable/progressbar_bg_yellow" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/payTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FBD953"
        android:gravity="center"
        android:paddingBottom="15dip"
        android:paddingTop="15dip"
        android:text="去支付"
        android:textColor="#333333"
        android:textSize="18sp" />

</LinearLayout>