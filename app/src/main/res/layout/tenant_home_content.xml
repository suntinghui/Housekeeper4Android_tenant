<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/com.wufriends.housekeeper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/tenant_img_13"
        android:drawablePadding="10dip"
        android:paddingBottom="8dip"
        android:paddingLeft="15dip"
        android:paddingTop="8dip"
        android:text="查看房源"
        android:textColor="#666666"
        android:textSize="13sp"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dip"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <!-- 整租 -->
        <LinearLayout
            android:id="@+id/wholeRentLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_gray"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dip"
            android:paddingTop="20dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tenant_img_17" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="整租"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="整套租，舒适住"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/gray" />

        <!-- 合租 -->
        <LinearLayout
            android:id="@+id/shareRentLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_gray"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dip"
            android:paddingTop="20dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tenant_img_14" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合租"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="独立租，不隔断"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <!-- 单间 -->
        <LinearLayout
            android:id="@+id/singleRoomLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_gray"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dip"
            android:paddingTop="20dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tenant_img_15" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单间"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="隔断租，有空间"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/gray" />

        <!-- 床位 -->
        <LinearLayout
            android:id="@+id/bedLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_gray"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dip"
            android:paddingTop="20dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tenant_img_16" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="床位"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="实惠租，欢乐住"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:orientation="horizontal">

        <!-- 我是房东 -->
        <LinearLayout
            android:id="@+id/landlordLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_gray"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dip"
            android:paddingTop="20dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tenant_img_18" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/landlordLogoImageView"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@drawable/head_keeper_default"
                android:visibility="gone"
                app:border_color="@color/blueme"
                app:border_width="1dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是房东"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="房屋托管 帮您租房"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="15dip"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent" />

        <!-- 房管家 -->
        <LinearLayout
            android:id="@+id/keeperLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_gray"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dip"
            android:paddingTop="20dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tenant_img_19" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/keeperLogoImageView"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@drawable/head_keeper_default"
                android:visibility="gone"
                app:border_color="@color/blueme"
                app:border_width="1dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房管家"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="联系我们 带您看房"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <!-- 媒体报道  -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/home_media" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray_2" />

    </LinearLayout>

    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/mediaViewPager"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_marginBottom="8dip"
        android:visibility="gone" />

    <!-- 推荐房源 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="20dip"
        android:drawableLeft="@drawable/blue_line_1"
        android:drawablePadding="10dip"
        android:text="推荐房源"
        android:textColor="#666666"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/recommendLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>


</LinearLayout>