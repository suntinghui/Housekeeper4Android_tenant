<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/com.wufriends.house4keeper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/topbarLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/barcolor"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我有房"
            android:textColor="#222222"
            android:textSize="18sp" />

        <Button
            android:id="@+id/shareBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/share_selector" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <!-- 上面 动图 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/viewPagerLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="fill_parent"
                    android:layout_height="240dip"
                    android:src="@drawable/default_image_good_detail" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="10dip">

                    <LinearLayout
                        android:id="@+id/indicatorLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"></LinearLayout>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingTop="15dip">

                <TextView
                    android:id="@+id/communityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小区名称"
                    android:textColor="#222222"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/areaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:drawableLeft="@drawable/keeper_img_10"
                    android:drawablePadding="3dip"
                    android:text="地区"
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/moneyTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="#ff7733"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/monthTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="元/月"
                        android:textColor="#ff7733"
                        android:textSize="15sp" />
                </LinearLayout>

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/flowlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    app:max_select="-1" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="15dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/leaseTypeTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="类型："
                        android:textColor="#999999"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/decorateTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="装修："
                        android:textColor="#999999"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/areaSizeTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="面积："
                        android:textColor="#999999"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/orientationTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="朝向："
                        android:textColor="#999999"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/floorTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="楼层："
                        android:textColor="#999999"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="13sp" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="15dip"
                    android:layout_marginTop="15dip"
                    android:background="@color/gray" />

                <!-- 入住时间 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:paddingBottom="3dip"
                        android:paddingTop="3dip"
                        android:text="入住时间"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/leaseTimeTextView"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:background="#88cc55"
                        android:gravity="center"
                        android:paddingBottom="3dip"
                        android:paddingTop="3dip"
                        android:text="随时入住"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 配套设施 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="#ffffff"
                android:drawableLeft="@drawable/yellow_line_1"
                android:drawablePadding="8dip"
                android:paddingBottom="10dip"
                android:paddingLeft="15dip"
                android:paddingTop="10dip"
                android:text="房屋配置"
                android:textColor="#999999"
                android:textSize="15sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <com.felipecsl.asymmetricgridview.library.widget.AsymmetricGridView
                android:id="@+id/gridView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="#cccccc"
                android:dividerHeight="0px"
                android:fadingEdge="none"
                android:focusable="false"
                android:gravity="center"
                android:listSelector="#00000000" />

            <!-- 取暖费 -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="#ffffff"
                android:drawableLeft="@drawable/yellow_line_1"
                android:drawablePadding="8dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingTop="10dip"
                android:visibility="gone">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="取暖费"
                    android:textColor="#999999"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/heatingFeesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="15dip"
                android:paddingTop="15dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cost_detail" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="20dip"
                    android:drawableLeft="@drawable/yellow_line_1"
                    android:drawablePadding="8dip"
                    android:text="租金已经包含的费用"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <com.felipecsl.asymmetricgridview.library.widget.AsymmetricGridView
                    android:id="@+id/gridView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:divider="#cccccc"
                    android:dividerHeight="0px"
                    android:fadingEdge="none"
                    android:focusable="false"
                    android:gravity="center"
                    android:listSelector="#00000000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="15dip"
                    android:drawableLeft="@drawable/yellow_line_1"
                    android:drawablePadding="8dip"
                    android:text="租客需要自理的费用"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <com.felipecsl.asymmetricgridview.library.widget.AsymmetricGridView
                    android:id="@+id/gridView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:divider="#cccccc"
                    android:dividerHeight="0px"
                    android:fadingEdge="none"
                    android:focusable="false"
                    android:gravity="center"
                    android:listSelector="#00000000" />
            </LinearLayout>

            <!-- 地图信息 -->
            <TextView
                android:id="@+id/locationInfoTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="#ffffff"
                android:drawableLeft="@drawable/yellow_line_1"
                android:drawablePadding="8dip"
                android:paddingBottom="10dip"
                android:paddingLeft="15dip"
                android:paddingTop="10dip"
                android:text="地图信息"
                android:textColor="#999999"
                android:textSize="15sp" />

            <com.housekeeper.activity.view.CustomNetworkImageView
                android:id="@+id/mapImageView"
                android:layout_width="fill_parent"
                android:layout_height="160dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="15dip" />

            <!-- 交通信息 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="#ffffff"
                android:drawableLeft="@drawable/yellow_line_1"
                android:drawablePadding="8dip"
                android:paddingBottom="10dip"
                android:paddingLeft="15dip"
                android:paddingTop="10dip"
                android:text="交通信息"
                android:textColor="#999999"
                android:textSize="15sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="15dip">

                <TextView
                    android:id="@+id/busTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="公交："
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/subwayTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:text="公交："
                    android:textColor="#666666"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- 房屋证件 -->
            <LinearLayout
                android:id="@+id/houseCertLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:layout_marginTop="15dip"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingTop="10dip"
                android:visibility="gone">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/blue_line_1"
                    android:drawablePadding="8dip"
                    android:text="房屋证件"
                    android:textColor="#999999"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bag_right_arrow" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/cancelPublishTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_yellow_light_2"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip"
        android:text="取消发布"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lookatLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lookListTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/bg_gray_light"
            android:gravity="center"
            android:paddingBottom="15dip"
            android:paddingTop="15dip"
            android:text="看房清单"
            android:textColor="@color/orange"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/applyLookTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_orange_light"
            android:gravity="center"
            android:paddingBottom="15dip"
            android:paddingTop="15dip"
            android:text="我要看房"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>