<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:focusable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="vertical"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:focusable="false"
            android:src="@drawable/withdrawal_sidongxi" />

        <!-- 银行及尾号信息 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:focusable="false"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bankNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_vertical"
                android:text="中国银行"
                android:textColor="@color/gray_333333"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_vertical"
                android:text="｜尾号："
                android:textColor="@color/gray_333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tailNumTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="center_vertical"
                android:text="0000"
                android:textColor="@color/gray_333333"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/transferNumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:focusable="false"
            android:gravity="center_vertical"
            android:text="提现流水号：000000"
            android:textColor="#999999"
            android:textSize="13sp" />

        <!-- 备注 -->

        <TextView
            android:id="@+id/remarkTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dip"
            android:background="#fff9af"
            android:focusable="false"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="如未到账请咨询银行"
            android:textColor="#333333"
            android:textSize="15sp" />

        <!-- 图片状态 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dip"
            android:focusable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/applyImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/withdrawal_apply"
                android:focusable="false" />

            <ImageView
                android:id="@+id/progressImageView_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/withdrawal_progess_done"
                android:focusable="false" />

            <ImageView
                android:id="@+id/bankProcessImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/withdrawal_bankprocess"
                android:focusable="false" />

            <ImageView
                android:id="@+id/progressImageView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/withdrawal_progess_watting"
                android:focusable="false" />

            <ImageView
                android:id="@+id/successImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/withdrawal_waitting"
                android:focusable="false" />
        </LinearLayout>

        <!-- 文字状态 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:focusable="false"
            android:orientation="horizontal" >

            <!-- 转出申请 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/applyStateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:text="转出申请成功"
                    android:textColor="#bbbbbb"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/applyTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:ellipsize="none"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="2015.01.01 00:00"
                    android:textColor="#bbbbbb"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 银行处理中 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bankProcessStateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:text="银行处理中"
                    android:textColor="#bbbbbb"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/bankProcessTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:ellipsize="none"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="2015.01.01 00:00"
                    android:textColor="#bbbbbb"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 转出成功 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/successStateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:text="转出成功"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/successTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:ellipsize="none"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="2015.01.01 00:00"
                    android:textColor="#bbbbbb"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottomLineView"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dip"
        android:background="#bbbbbb" />

</LinearLayout>